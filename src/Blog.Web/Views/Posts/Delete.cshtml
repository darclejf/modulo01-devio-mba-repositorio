@model EditPostModel
<h1>Delete</h1>

<h3>Deseja excluir este Post?</h3>
<div>
    <hr />
    <div class="row">
        <div class="col-sm-12">
            @Html.DisplayNameFor(model => model.Title)
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </div>
    </div>
    <form asp-action="DeleteConfirm">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-area="" asp-controller="Posts" asp-action="View" asp-route-id="@Model.Id">Cancelar</a>
    </form>
</div>
